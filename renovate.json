{
  "extends": [
    "config:recommended",
    ":rebaseStalePrs",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "description": "Updates to GitHub Actions should be tagged as 'ci'",
      "matchFileNames": [
        ".github/workflows/*.yml",
        ".github/workflows/*.yaml"
      ],
      "semanticCommitType": "ci"
    }
  ],
  "automerge": true,
  "prConcurrentLimit": 30,
  "prHourlyLimit": 30,
  "ignoreDeps": ["javafx"],
  "git-submodules": {
    "enabled": true
  }
}
